    "logrocket": "^0.6.19",
    "logrocket-react": "^3.0.0",
    "moment": "^2.24.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.8.0-alpha.0",
    "react-datepicker": "^2.0.0",
    "react-dom": "^16.8.0-alpha.0",
    "react-kawaii": "^0.6.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.0.5",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "redux-form": "^8.1.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
