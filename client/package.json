  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --env=jsdom",
    "preinstall": "node ./bootstrap.js",
    "windows-test": "set CI=true && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "test:watch": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "share": "lt --port 3000 --subdomain xpto",
    "bs": "npm run build && cd ./build && python -m SimpleHTTPServer 8000"
  },
  "babel": {
    "plugins": [
      "add-react-displayname"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run windows-test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "husky": "^1.3.1",
    "lint-staged": "^7.3.0",
    "localtunnel": "^1.9.1",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0"
  }
